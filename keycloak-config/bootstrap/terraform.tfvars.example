# Required settings
keycloak_url            = "https://keycloak.example.com"
keycloak_admin_realm    = "master"
keycloak_admin_username = "admin"
keycloak_admin_password = "replace-me"

bootstrap_realm_name         = "terraform"
bootstrap_realm_display_name = "Terraform Realm"

terraform_client_id   = "terraform"
terraform_client_name = "Terraform Provisioner"

assign_global_admin = false
realm_management_roles = [
  "view-realm",
  "manage-clients",
  "manage-users",
  "manage-identity-providers",
  "manage-realm",
]

client_secret_override = null

userinfosync_defaults = {
  enabled            = false
  runAt              = "03:00"
  windowMinutes      = 3
  batchSize          = 500
  resultType         = "basic"
  httpTimeoutMs      = 5000
  maxConcurrency     = 15
  retryMaxAttempts   = 3
  retryBaseBackoffMs = 250
  taskKeyPrefix      = "userinfosync"
  mappingJson        = jsonencode({ deptId = "response.employees.departmentCode" })
  invalidateOnKeys   = "deptId"
}
